{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build (Release)",
      "type": "process",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy", "Bypass",
        "-File", "${workspaceFolder}\\build.ps1",
        "-Config", "Release",
        "-NoRun"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": []
    },
    {
      "label": "Build (Debug)",
      "type": "process",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy", "Bypass",
        "-File", "${workspaceFolder}\\build.ps1",
        "-Config", "Debug",
        "-NoRun"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Run (VICE – PAL)",
      "type": "process",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy", "Bypass",
        "-File", "${workspaceFolder}\\build.ps1",
        "-Config", "Release",
        "-ViceModel", "Pal"
        // Merk: IKKJE -NoRun her
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": []
    },
    {
      "label": "Run (VICE – NTSC)",
      "type": "process",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy", "Bypass",
        "-File", "${workspaceFolder}\\build.ps1",
        "-Config", "Release",
        "-ViceModel", "Ntsc"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": []
    },
    {
      "label": "Run (Headless/CI)",
      "type": "process",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy", "Bypass",
        "-File", "${workspaceFolder}\\build.ps1",
        "-Config", "Release",
        "-ViceModel", "Pal",
        "-Headless"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": []
    }
  ]
}
